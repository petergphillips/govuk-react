{
  "name": "@govuk-react/loading-box",
  "version": "0.7.0",
  "dependencies": {
    "@govuk-react/constants": "^0.7.0",
    "@govuk-react/icons": "^0.7.0",
    "govuk-colours": "^1.0.3",
    "hex-rgb": "^4.0.0",
    "react-transition-group": "^2.2.1"
  },
  "peerDependencies": {
    "react": ">=16.2.0",
    "styled-components": ">=4"
  },
  "devDependencies": {
    "react-transition-group": "^2.2.1"
  },
  "scripts": {
